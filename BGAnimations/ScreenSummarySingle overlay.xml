			OnCommand="%function(self) self:zoom(0.6); self:horizalign('right'); self:y( scale(7,1,7,SCREEN_CENTER_Y-150,SCREEN_CENTER_Y+60) ); end"
		/>
	</children></ActorFrame>
	<ActorFrame OnCommand="%function(self) self:x( scale(3,1,3,SCREEN_LEFT+300,SCREEN_RIGHT-10) ); end"> <children>
		<BitmapText
			Font="Common Normal"
			Text="@FormatPercentScore( GetSongsPercentComplete(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_EASY) )"
			OnCommand="%function(self) self:zoom(0.6); self:horizalign('right'); self:y( scale(2,1,7,SCREEN_CENTER_Y-150,SCREEN_CENTER_Y+10) ); if GetSongsPercentComplete(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_EASY) &gt;= 1 then self:diffuseshift() end; self:effectcolor1(0.5,0.7,1,1); end"
		/>
		<BitmapText
			Font="Common Normal"
			Text="@FormatPercentScore( GetSongsPercentComplete(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_MEDIUM) )"
			OnCommand="%function(self) self:zoom(0.6); self:horizalign('right'); self:y( scale(3,1,7,SCREEN_CENTER_Y-150,SCREEN_CENTER_Y+10) ); if GetSongsPercentComplete(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_MEDIUM) &gt;= 1 then self:diffuseshift() end; self:effectcolor1(0.5,0.7,1,1); end"
		/>
		<BitmapText
			Font="Common Normal"
			Text="@FormatPercentScore( GetSongsPercentComplete(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_HARD) )"
