		/>
		<BitmapText
			Font="Common Normal"
			Text="@string.format( '%5.2f', PROFILEMAN:GetMachineProfile():GetSongsActual(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_CHALLENGE) )"
			OnCommand="%function(self) self:zoom(0.6); self:horizalign('right'); self:y( scale(5,1,7,SCREEN_CENTER_Y-150,SCREEN_CENTER_Y+10) ); end"
		/>
		<BitmapText
			Font="Common Normal"
			Text="@string.format( '%5.2f', PROFILEMAN:GetMachineProfile():GetCoursesActual(STEPS_TYPE_DANCE_SINGLE,COURSE_DIFFICULTY_REGULAR) )"
			OnCommand="%function(self) self:zoom(0.6); self:horizalign('right'); self:y( scale(6,1,7,SCREEN_CENTER_Y-150,SCREEN_CENTER_Y+60) ); end"
		/>
		<BitmapText
			Font="Common Normal"
			Text="@string.format( '%5.2f', PROFILEMAN:GetMachineProfile():GetCoursesActual(STEPS_TYPE_DANCE_SINGLE,COURSE_DIFFICULTY_DIFFICULT) )"
			OnCommand="%function(self) self:zoom(0.6); self:horizalign('right'); self:y( scale(7,1,7,SCREEN_CENTER_Y-150,SCREEN_CENTER_Y+60) ); end"
		/>
	</children></ActorFrame>
	<ActorFrame OnCommand="%function(self) self:x( scale(2,1,3,SCREEN_LEFT+300,SCREEN_RIGHT-10) ); self:addx(20) end"> <children>
		<BitmapText
			Font="Common Normal"
			Text="@string.format( '%5.2f', PROFILEMAN:GetMachineProfile():GetSongsPossible(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_EASY) )"
			OnCommand="%function(self) self:zoom(0.6); self:horizalign('right'); self:y( scale(2,1,7,SCREEN_CENTER_Y-150,SCREEN_CENTER_Y+10) ); end"
		/>
		<BitmapText
			Font="Common Normal"
			Text="@string.format( '%5.2f', PROFILEMAN:GetMachineProfile():GetSongsPossible(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_MEDIUM) )"
			OnCommand="%function(self) self:zoom(0.6); self:horizalign('right'); self:y( scale(3,1,7,SCREEN_CENTER_Y-150,SCREEN_CENTER_Y+10) ); end"
		/>
		<BitmapText
			Font="Common Normal"
			Text="@string.format( '%5.2f', PROFILEMAN:GetMachineProfile():GetSongsPossible(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_HARD) )"
			OnCommand="%function(self) self:zoom(0.6); self:horizalign('right'); self:y( scale(4,1,7,SCREEN_CENTER_Y-150,SCREEN_CENTER_Y+10) ); end"
		/>
		<BitmapText
			Font="Common Normal"
			Text="@string.format( '%5.2f', PROFILEMAN:GetMachineProfile():GetSongsPossible(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_CHALLENGE) )"
			OnCommand="%function(self) self:zoom(0.6); self:horizalign('right'); self:y( scale(5,1,7,SCREEN_CENTER_Y-150,SCREEN_CENTER_Y+10) ); end"
		/>
		<BitmapText
			Font="Common Normal"
