			OnCommand="%function(self) self:zoom(0.6); self:horizalign('right'); self:maxwidth(180) self:y( scale(7,1,7,SCREEN_CENTER_Y-150,SCREEN_CENTER_Y+60) ); if GetCoursesPercentComplete(STEPS_TYPE_DANCE_SINGLE,COURSE_DIFFICULTY_DIFFICULT) &gt;= 1 then self:diffuseshift() end; self:effectcolor1(0.5,0.7,1,1); end"
		/>
	</children></ActorFrame>
	<ActorFrame OnCommand="y,SCREEN_CENTER_Y+70"> <children>
		<BitmapText
			Font="Common Normal"
			Text="Total Actual"
			OnCommand="x,SCREEN_CENTER_X+140;y,105;horizalign,right;zoom,0.5"
		/>
		<BitmapText
			Font="_gpscore P1"
			Text="@string.format( '%5.2f', 
				PROFILEMAN:GetMachineProfile():GetSongsActual(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_EASY)+
				PROFILEMAN:GetMachineProfile():GetSongsActual(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_MEDIUM)+
				PROFILEMAN:GetMachineProfile():GetSongsActual(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_HARD)+
				PROFILEMAN:GetMachineProfile():GetSongsActual(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_CHALLENGE)+
				PROFILEMAN:GetMachineProfile():GetCoursesActual(STEPS_TYPE_DANCE_SINGLE,COURSE_DIFFICULTY_REGULAR)+
				PROFILEMAN:GetMachineProfile():GetCoursesActual(STEPS_TYPE_DANCE_SINGLE,COURSE_DIFFICULTY_DIFFICULT)
				)"
			OnCommand="horizalign,right;x,SCREEN_CENTER_X+290;y,105;zoom,0.7"
		/>
		<BitmapText
			Font="Common Normal"
			Text="Total Possible"
			OnCommand="x,SCREEN_CENTER_X+140;y,120;horizalign,right;zoom,0.5"
		/>
		<BitmapText
			Font="_gpscore P1"
			Text="@string.format( '%5.2f', 
				PROFILEMAN:GetMachineProfile():GetSongsPossible(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_EASY)+
				PROFILEMAN:GetMachineProfile():GetSongsPossible(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_MEDIUM)+
				PROFILEMAN:GetMachineProfile():GetSongsPossible(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_HARD)+
				PROFILEMAN:GetMachineProfile():GetSongsPossible(STEPS_TYPE_DANCE_SINGLE,DIFFICULTY_CHALLENGE)+
				PROFILEMAN:GetMachineProfile():GetCoursesPossible(STEPS_TYPE_DANCE_SINGLE,COURSE_DIFFICULTY_REGULAR)+
				PROFILEMAN:GetMachineProfile():GetCoursesPossible(STEPS_TYPE_DANCE_SINGLE,COURSE_DIFFICULTY_DIFFICULT)
				)"
			OnCommand="horizalign,right;x,SCREEN_CENTER_X+290;y,120;zoom,0.7"
		/>
		<BitmapText
			Font="Common Normal"
			Text="Star Complete"
			OnCommand="x,SCREEN_CENTER_X+140;horizalign,right;y,140;zoom,1"
		/>
		<BitmapText
			Font="_gpscore P1"
			Text="@FormatPercentScore( GetTotalPercentComplete(STEPS_TYPE_DANCE_SINGLE))"
			OnCommand="%function (self) self:horizalign('right'); self:x(SCREEN_CENTER_X+290); self:y(140); self:zoom(1); if GetTotalPercentComplete(STEPS_TYPE_DANCE_SINGLE) &gt;= 1 then self:diffuseshift() end; self:effectcolor1(0.5,0.7,1,1); end"
		/>
		<AutoActor
			File="@THEME:GetPath(EC_GRAPHICS,'ScreenEvaluation','grade ' .. GradeToString(GetGradeFromPercent(GetTotalPercentComplete(STEPS_TYPE_DANCE_SINGLE))))"
			OnCommand="x,SCREEN_CENTER_X+200;y,0;zoom,0.9"
		/>
	</children></ActorFrame>
	<ActorFrame Condition="GetTotalPercentComplete(STEPS_TYPE_DANCE_SINGLE) &gt; 1" OnCommand="y,SCREEN_CENTER_Y+138"> <children>
		<BitmapText
			Font="Common Normal"
			Text="Extra Credit"
			OnCommand="zoom,0.6;horizalign,left;x,SCREEN_CENTER_X-260;y,-24;diffuseshift;effectcolor1,0.2,0.2,0.2,1;"
		/>
		<BitmapText
			Font="_futurist metalic"
			Text="@string.format( '%5.2f', math.max(0,GetExtraCredit(STEPS_TYPE_DANCE_SINGLE)) )"
			OnCommand="zoom,0.7;horizalign,right;x,SCREEN_CENTER_X+106;y,-24;diffuseshift;effectcolor1,0.2,0.2,0.2,1"
		/>
	</children></ActorFrame>
	<BitmapText
			Font="Common Normal"
			Text="Course Mode Summary"
			OnCommand="zoom,0.6;horizalign,left;x,SCREEN_LEFT+35;y,SCREEN_CENTER_Y-7;"
		/>
	<BitmapText
			Font="Common Normal"
			Text="Dance Mode Summary"
			OnCommand="zoom,0.6;horizalign,left;x,SCREEN_LEFT+35;y,SCREEN_CENTER_Y-155;"
		/>
	<BitmapText
			Font="Common Normal"
			Text="Press [ BACK ] to go back to the Records Menu."
			OnCommand="zoom,0.6;horizalign,left;x,SCREEN_LEFT+20;y,SCREEN_BOTTOM-70;zoom,0.4"
		/>
</children></ActorFrame>